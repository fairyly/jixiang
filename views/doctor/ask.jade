extends ../layouts/header
block content
  #container.container.clearfix  
    include ../layouts/aside
    article.mod-grey 
      section.mod-grey-hd.mod-pd-top10.tab.clearfix
        ul#tab
          li
            h3.tab-title 问诊预约
          li
            a.pjax.cur(href="/doctor/ask?cat=1") 未回复
          li
            a.pjax(href="/doctor/ask?cat=2") 已回复
      .mod-grey-bd.mod-grey-bd-pd20
       if doc.length
          each app in doc
            table.order(style="width:710px;")
              caption #{app.time} #{app.timeB}的预约申请
                if !app.reply
                  span.fl-l(style="color:red")未答复
                else
                  span.fl-l 已回复
              tbody
                tr
                  td.reply 概况
                  td
                    if !!app.doctor.length
                      a 预约医师：#{app.doctor}
                      br
                    a 病情简述：
                      a #{app.paitent}
                if !!app.reply
                  tr
                    td.reply 回复
                    td
                      if !app.disagree
                        a(style="color:green") #{app.agreereply}
                        if !!app.replycontent
                          br 
                          a 备注：#{app.replycontent}
                      else
                        if !!app.replycontent
                          a(style="color:#888") 【预约不成功】#{app.replycontent}
                        else
                          a(style="color:#888") 【预约不成功】这个医师很懒，什么也没有说             
        else
          table.order(style="width:710px;")
              caption.line 没有相关信息
