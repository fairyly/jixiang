extends ../layouts/header
block content
  #container.container.clearfix
    //侧边栏导航
    include order_aside
    article.read-style
      section.admin-title.line.clearfix
        h1.fl-l #{title}

      table.table.table-top
        thead
          tr
            th 订单号
            th 提交时间
            th 订单列表
            th 总价
            th 状态
        tbody
          if !!orders.length
            each order in orders
              tr
                td= order.id
                td= order.subtime
                td
                  -var total=0
                   if order.orderlist.length
                    ul
                     each item in order.orderlist
                       -total+=parseInt(item.mealprice,10)
                       li !{item.mealname}：&nbsp; !{item.mealprice}
                td !{total}&nbsp;元
                td
                  a.delete.common-btn 未配送
          else
            tr
              td 没有订单