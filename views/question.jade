extends layouts/header
block content
  #container.container.clearfix.ex-side
    //侧边栏导航
    aside.read-style.category
      section
        .hd.hd-bottom
          h3 使用说明
        .bd
          ul
            li 普通提问可以直接输入
            li 输入帮助或help查询精准指令
            li "@图书："+内容可以返回图书信息
            li "@电影："+内容可以返回电影信息
            li "@音乐："+内容可以返回音乐信息

      section.nav
        .hd.hd-bottom
          h3 问题分类
        ul.admin-nav-list
          li
            a(href="#") 热门

    article.read-style
      section.line.question
        img(src="/images/question.jpg",alt="问题咨询")
      section.line
        #question-wrap
          form#question(action="/question",method="post")
            label
              a 提问点什么吧？
            input#q(type="text",name="q")
            button#qsub.common-btn.pink-btn 提交问题
      section
        #answer.flow-mod 有什么问题就在上面提出吧，输入help或者帮助可以得到使用说明。
