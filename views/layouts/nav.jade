nav
  if user
    ul.login.fl-r
      li.user
        a(href="#") #{user.username}
      li.logout
        a(href="/logout") 退出
    .nav-wrap
      ul.nav-list
        - var menus = [{text:'首页',href:'/',cur:'index'},{text:'订餐',href:'/meal',cur:'meal'},{text:'问医',href:'/doctor',cur:'doctor'},{text:'居家养老',href:'/service',cur:'service'},{text:'问题咨询',href:'/question',cur:'question'}]      
        each menu in menus
          - var active = ''
            if menu.cur == cur
              - active = 'cur'
            li(class='#{active}')
              a(href='#{menu.href}') #{menu.text}
         

