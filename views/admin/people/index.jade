extends ../layouts/header
block content
  #container.container.clearfix
    article#people.mod-grey  
      section.mod-grey-hd.mod-pd-top10.tab.clearfix
        ul#tab
          li
            h3.tab-title 人员管理
          li
            a.cur 普通用户
          li
            a(href="/admin/people/admin") 管理员
      .mod-grey-bd.mod-grey-bd-pd20
        table#people-list.order(style="width:710px;")
          thead
            tr
              th UID
              th 用户名
              th 性别
              th 出生年月
              th 注册时间
              th 最近登入
              th 操作
          tbody
            if people.length
              each user in people
                tr
                  td= user._id
                  td= user.username
                  td= user.sex
                  td= user.birthday
                  td= user.regdate
                  td= user.logindate
                  td
                    a.mr10(href="/admin/people/info?id=#{user._id}") 查看
                    a(href="/admin/people/delete?id=#{user._id}",role='del') 删除
            else
              tr
                td 还没有居民入住
        include ../layouts/pagenav

