extends ../layouts/header
block content
  #container.container.clearfix
    article#service.mod-grey  
      section.mod-grey-hd.mod-pd-top10.tab.clearfix
        ul#tab
          li
            h3.tab-title 服务管理
          li
            a.cur 家政预约
      .mod-grey-bd.mod-grey-bd-pd20
        if !!doc.length
          each item in doc
            table.order.order-w980
              caption 【#{item.username}】的家政服务申请
                if !item.reply
                  a.reply.btn-reply 删除
                  a.reply.btn-reply.doreply 点击答复
                else
                  span.fl-l 已回复
              tbody
                tr
                  td.reply 时间
                  td #{item.time} #{item.timeB}
                tr
                  td.reply 概况
                  td 服务分类：
                    a #{item.service_cat}
                     br
                    | 备注：
                    a #{item.remark}
                if !!item.reply
                  tr
                    td.reply 回复
                    td
                      a #{item.replycontent}

              if !item.reply
                tfoot.hide
                  tr
                    td(colspan='2')
                      form.form.form-inline(action="/admin/service",method="post")
                        input(type="hidden",value="#{item._id}",name="askid")             
                        input(type="text",name="reply")
                        button.btn(type="submit") 回复 
        else
          table.table.table-top.order-table
            caption.line 目前还没有人预约  
            