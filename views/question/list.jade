extends ../layouts/header
block content
  #container.container.clearfix  
    include ../layouts/aside
    article.mod-grey 
      section.mod-grey-hd.mod-pd-top10.tab.clearfix
          ul#tab
            - var cur = {1:'',2:''};
            - cur[result.cur] = 'cur';
            li
              h3.tab-title 我的问题
            li
              a(href="/question/answer?cat=1",class=cur[1]) 未回复
            li
              a(href="/question/answer?cat=2",class=cur[2]) 已回复
      .mod-grey-bd.mod-grey-bd-pd20
        table.order(style="width:710px;")
          if result.doc.length
            each q in result.doc
              tbody
                tr.space
                  td(colspan="2")
                tr
                  td(colspan="2")
                    if !q.reply
                      a(style="color:red") 该问题还未回复
                    else
                      | 问题已经被#{q.replyuser}回复了  
                tr
                  td.reply 问题：
                  td= q.title
              if !!q.reply
                tfoot
                  tr
                    td.reply 回复
                    td #{q.content}       
          else
            caption.line 您还没有不明白的问题
