extends ../layouts/header
block content
  #container.container.clearfix  
    include ../layouts/aside
    article.mod-grey 
      section.mod-grey-hd.mod-pd-top10.tab.clearfix
          ul#tab
            li
              h3.tab-title 我的问题
            li
              a.pjax.cur(href="/question/answer?cat=1") 未回复
            li
              a.pjax(href="/question/answer?cat=2") 已回复
      .mod-grey-bd.mod-grey-bd-pd20
        if !!doc.length
          each q in doc
            table.order(style="width:710px;")
              caption 
                if !q.reply
                  a(style="color:red") 该问题还未回复
                else
                  | 问题已经被#{q.replyuser}回复了
              tbody
                tr
                  td.reply 问题：
                  td= q.title
              if !!q.reply
                tfoot
                  tr
                    td.reply 回复
                    td #{q.content}       
        else
          table.order(style="width:710px;")
              caption.line 您还没有不明白的问题
